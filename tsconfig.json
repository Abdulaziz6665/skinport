{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./build/**/*"]
}
